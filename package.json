{
  "name": "electron-auto-update-simple",
  "version": "1.0.0",
  "description": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "publish": "build -p always",
    "run-server": "http-server dist -p 8080",
    "sign-dev-electron-app": "codesign --deep --force --verbose --sign - node_modules/electron/dist/Electron.app"
  },
  "repository": "https://github.com/Peelz/electron-auto-update",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "Peelz",
  "license": "MIT",
  "devDependencies": {
    "electron": "^19.0.1",
    "electron-builder": "^23.3.3",
    "electron-prebuilt-compile": "^8.2.0",
    "electron-devtools-installer": "^3.2.0",
    "http-server": "^14.1.1"
  },
  "dependencies": {
    "electron-log": "^4.4.8",
    "electron-updater": "^5.2.1",
    "tls-check": "^1.0.0"
  },
  "build": {
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:8080/"
      }
    ],
    "appId": "com.github.peelz.electron-auto-update",
    "mac": {
      "target": [
        "zip",
        "dmg"
      ]
    },
    "nsis": {
      "perMachine": true
    }
  }
}
